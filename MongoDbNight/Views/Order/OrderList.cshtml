@model List<ResultOrderWithCustomerWithProductDto>
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sipariş Listesi</h4>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ürün Adı </th>
                                <th scope="col">Ürün Adet </th>
                                <th scope="col">Müşteri Adı</th>
                                <th scope="col">Sipariş Tarihi </th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {  
                                count++;
                                <tr>
                                  
                                    <td>
                                            @count
                                    </td>

                                    <td>
                                            @item.Product.ProductName
                                    </td>
                                    <td>
                                            @item.OrderProductPiece
                                    </td>
                                  
                                    <td>
                                            @item.Customer.CustomerNameSurname
                                    </td>
                                    <td>
                                            @(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))
                                    </td>

                                    <td>
                                        <a href="/Order/DeleteOrder/@item.OrderId" class="btn btn-danger">
                                            <span class="icon text-white-50">
                                                <i class="mdi mdi-delete menu-icon"></i>
                                            </span>
                                            <span class="text">Sil </span>
                                        </a>
                                    </td>

                                    <td>

                                        <a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-success">
                                            <span class="icon text-white-50">
                                                <i class="mdi mdi-table-edit menu-icon"></i>
                                            </span>
                                            <span class="text">Düzenle</span>
                                        </a>

                                    </td>

                                </tr>
                            }
                    </table>

                        <a href="/Order/CreateOrder/" class="btn btn-primary ">
                        <span class="icon text-white-50">
                            <i class="mdi mdi-plus-circle menu-icon"></i>
                        </span>
                        <span class="text">Yeni Sipariş Girişi</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>


