@model List<ResultCustomerDto>
@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Müşteri Listesi</h4>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Müşteri Adı Soyadı </th>
                                <th scope="col">Müşteri Şehir </th>
                                <th scope="col">Müşteri Mail </th>
                                <th scope="col">Müşteri Telefon </th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>

                                    <td>
                                        @item.CustomerNameSurname
                                    </td>
                                    <td>
                                        @item.CustomerCity
                                    </td>
                                    <td>
                                        @item.CustomerMail
                                    </td>
                                    <td>
                                        @item.CustomerPhone
                                    </td>
                                    <td>
                                        <a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-danger">
                                            <span class="icon text-white-50">
                                                <i class="mdi mdi-delete menu-icon"></i>
                                            </span>
                                            <span class="text">Sil </span>
                                        </a>
                                    </td>

                                    <td>

                                        <a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-success">
                                            <span class="icon text-white-50">
                                                <i class="mdi mdi-table-edit menu-icon"></i>
                                            </span>
                                            <span class="text">Düzenle</span>
                                        </a>

                                    </td>

                                </tr>
                            }
                    </table>

                    <a href="/Customer/CreateCustomer/" class="btn btn-primary ">
                        <span class="icon text-white-50">
                            <i class="mdi mdi-plus-circle menu-icon"></i>
                        </span>
                        <span class="text">Yeni Müşteri Girişi</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
