@model List<ResultProductsWithCategoryDto>

@{
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ürünler Listesi</h4>
             
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ürün Resim /Ürün Adı</th>
                                <th scope="col">Ürün Stok</th>
                                <th scope="col">Ürün Fiyat</th>
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td><img src="@item.SavedUrl" style="width:150px;height:100px;">@item.ProductName</td>
                                    
                                    <td>@item.Price</td>
                                    <td>@item.Stock</td>
                                    <td>
                                        <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">
                                            <span class="icon text-white-50">
                                                <i class="mdi mdi-delete menu-icon"></i>
                                            </span>
                                            <span class="text">Sil </span>
                                        </a>
                                    </td>
                                  
                                    <td>

                                        <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">
                                            <span class="icon text-white-50">
                                                <i class="mdi mdi-table-edit menu-icon"></i>
                                            </span>
                                            <span class="text">Düzenle</span>
                                        </a>

                                    </td>
                                   
                                </tr>
                            }
                    </table>

                    <a href="/Product/CreateProduct/" class="btn btn-primary ">
                        <span class="icon text-white-50">
                            <i class="mdi mdi-plus-circle menu-icon"></i>
                        </span>
                        <span class="text">Yeni Ürün Girişi</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div> 

